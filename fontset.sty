% 中文默认字体 rffamily
\setCJKmainfont[
  Extension      = .otf,
  UprightFont    = *-Regular,
  BoldFont       = NotoSansSC-Regular,
  ItalicFont     = 方正楷体_GBK.TTF,
  BoldItalicFont = 方正圆体_GBK-Regular.TTF
]{NotoSerifSC}

% 中文无衬线字体 sffamily
\setCJKsansfont[
  Extension      = .otf,
  UprightFont    = *-Regular,
  BoldFont       = *-Bold,
  ItalicFont     = *-Light,
  BoldItalicFont = *-Medium
]{NotoSansSC}

% 中文等宽字体 ttfamily
